{
  "manifest_version": 2,
  "name": "Note Table Helper",
  "version": "1.0.0",
  "description": "note.comで記事を作成する際に、表をTeX形式で簡単に入力できるようにする補助ツールです。",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://editor.note.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Note Table Helper",
    "default_popup": "popup/popup.html"
  }
}
